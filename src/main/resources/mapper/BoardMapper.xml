<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">

    <insert id="save" parameterType="com.review.dto.BoardDTO">
        insert into moong_table (content, title, writer) values (#{content}, #{title}, #{writer})
    </insert>

    <select id="list" resultType="com.review.dto.BoardDTO">
        select * from moong_table
        order by bno DESC
    </select>

    <select id="read" parameterType="int" resultType="com.review.dto.BoardDTO">
        select * from moong_table
        where bno = #{bno}
    </select>

    <update id="hits" parameterType="int">
        update moong_table set hits = hits + 1
        where bno = #{bno}
    </update>

    <delete id="delete" parameterType="int">
        delete from moong_table
        where bno = #{bno}
    </delete>

    <update id="update" parameterType="com.review.dto.BoardDTO">
        update moong_table set title= #{title}, content = #{content} where bno = #{bno}
    </update>
</mapper>