<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <!-- 콘솔 출력 설정 -->
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %5p [%c] %m%n"/>
        </Console>

        <!-- 파일 출력 설정 -->
        <RollingFile name="file" fileName="/data/was-app/logs/study.log" filePattern="/data/was-app/logs/study.log.%d{yyyy-MM-dd}">
            <PatternLayout pattern="%d %5p [%c{1}.%M(%L)] - %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- com 패키지의 로그 설정 -->
        <Logger name="com" level="DEBUG" additivity="false">
            <AppenderRef ref="console" />
            <AppenderRef ref="file" />
        </Logger>

        <!-- java.sql 패키지의 로그 설정 -->
        <Logger name="java.sql" level="ERROR" additivity="false">
            <AppenderRef ref="console" />
            <AppenderRef ref="file" />
        </Logger>

        <!-- egovframework.com.cmm 패키지의 로그 설정 -->
        <Logger name="egovframework.com.cmm" level="ERROR" additivity="false">
            <AppenderRef ref="console" />
            <AppenderRef ref="file" />
        </Logger>

        <!-- org.springframework 패키지의 로그 설정 -->
        <Logger name="org.springframework" level="DEBUG" additivity="false">
            <AppenderRef ref="console" />
            <AppenderRef ref="file" />
        </Logger>

        <!-- com.zaxxer.hikari 패키지의 로그 설정 -->
        <Logger name="com.zaxxer.hikari" level="ERROR">
            <AppenderRef ref="console" />
            <AppenderRef ref="file" />
        </Logger>

        <!-- Root 로거 설정 -->
        <Root level="DEBUG">
            <AppenderRef ref="console" />
            <AppenderRef ref="file" />
        </Root>
    </Loggers>
</Configuration>

